{
  "extends": [
    "config:base"
  ],
  "automerge": true,
  "commitBodyTable": true,
  "packageRules": [
    {
      "excludePackageNames": [
        "^org.graalvm.sdk:graal-sdk",
        "^org.graalvm.js:js",
        "^org.springframework:spring-beans"
      ],
      "matchPackagePatterns": [
        "*"
      ],
      "matchUpdateTypes": [
        "major",
        "minor",
        "patch"
      ],
      "groupName": "all dependencies",
      "groupSlug": "all"
    }
  ]
}
